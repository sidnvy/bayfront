---
import Layout from '../layouts/Layout.astro';
---

<Layout title="BAYFRONT - Professional Real Estate Experts Around You">
  <section class="relative h-[calc(100vh-88px)] flex items-center justify-center text-white">
    <div class="absolute inset-0 z-0">
      <img src="/hero-new.jpg" alt="Hero Background" class="w-full h-full object-cover object-center" />
      <div class="absolute inset-0 bg-gradient-to-b from-primary/70 to-primary/50"></div>
    </div>
    <div class="container mx-auto px-8 text-center relative z-10">
      <img src="/logo-text.svg" alt="BAYFRONT" class="h-8 md:h-16 mx-auto mb-4 brightness-0 invert" />
      <p class="text-xl tracking-[0.2em] font-light">Pilot quality New life</p>
    </div>
  </section>

  <section class="py-24 bg-primary">
    <div class="container mx-auto px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div>
          <div class="relative overflow-hidden aspect-square">
            <img src="/tailor-made.jpg" alt="Tailor Made" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/30"></div>
            <div class="absolute inset-x-0 bottom-0 text-center text-white p-8">
              <h3 class="text-2xl mb-3 tracking-wider">TAILOR-MADE</h3>
              <p class="text-gray-200 text-sm">Niche customization, creating a unique home for you</p>
            </div>
          </div>
        </div>

        <div>
          <div class="relative overflow-hidden aspect-square">
            <img src="/quality.jpg" alt="Quality" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/30"></div>
            <div class="absolute inset-x-0 bottom-0 text-center text-white p-8">
              <h3 class="text-2xl mb-3 tracking-wider">QUALITY</h3>
              <p class="text-gray-200 text-sm">Serve customers with the highest quality</p>
            </div>
          </div>
        </div>

        <div>
          <div class="relative overflow-hidden aspect-square">
            <img src="/optimization.jpg" alt="Optimization" class="w-full h-full object-cover" />
            <div class="absolute inset-0 bg-black/30"></div>
            <div class="absolute inset-x-0 bottom-0 text-center text-white p-8">
              <h3 class="text-2xl mb-3 tracking-wider">OPTIMIZATION</h3>
              <p class="text-gray-200 text-sm">Professionally and carefully integrate high-quality resources</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-primary/80">
    <div class="container mx-auto px-8 text-center">
      <!-- <a href="/business" class="inline-block px-12 py-4 text-white border-2 border-accent hover:bg-accent transition-colors duration-300 tracking-wider">
        SEE MORE
      </a> -->
    </div>
  </section>
</Layout>
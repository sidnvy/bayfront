---
import Layout from '../../layouts/Layout.astro';
import ContactForm from '../../components/ContactForm.astro';

const formLabels = {
  name: '姓名',
  email: '电子邮箱',
  phone: '电话号码',
  message: '留言内容',
  submit: '发送信息',
  sending: '发送中...',
  success: '信息发送成功，谢谢。',
  error: '发生错误，请重试。',
  validation: {
    required: '此项为必填项',
    email: '请输入有效的电子邮箱地址'
  }
};
---

<Layout title="联系我们 - BAYFRONT" lang="zh">
  <section class="pt-20 pb-12">
    <div class="container mx-auto px-8">
      <h1 class="text-4xl md:text-6xl text-white font-light tracking-wider mb-8">联系我们</h1>
    </div>
  </section>

  <section class="pb-24 bg-primary">
    <div class="container mx-auto px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <ContactForm labels={formLabels} />
        </div>

        <div>
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3281.3767172579527!2d135.4993!3d34.6759!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6000e737837da92b%3A0x3e464c6b8d48dd21!2z44K144Oz44Op44Kk44K66ZW35aCA!5e0!3m2!1sja!2sjp!4v1707799611799!5m2!1sja!2sjp" 
            width="100%" 
            height="100%" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy" 
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full h-[400px]"
          ></iframe>
        </div>
      </div>
    </div>
  </section>
</Layout> 
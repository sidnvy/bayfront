---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="BAYFRONT - Professional Real Estate Experts Around You" lang="en">
  <section class="relative h-[calc(100vh-88px)] flex items-center justify-center text-white">
    <div class="absolute inset-0 z-0">
      <img src="/hero-new.jpg" alt="Hero Background" class="w-full h-full object-cover object-center" />
      <div class="absolute inset-0 bg-gradient-to-b from-primary/70 to-primary/50"></div>
    </div>
    <div class="container mx-auto px-8 text-center relative z-10">
      <img src="/logo-text.svg" alt="BAYFRONT" class="h-8 md:h-16 mx-auto mb-4 brightness-0 invert" />
      <p class="text-xl tracking-[0.2em] font-light">Pilot quality New life</p>
    </div>
  </section>

  <section class="py-16 bg-primary/80">
    <div class="container mx-auto px-8 text-center">
    </div>
  </section>
</Layout> 
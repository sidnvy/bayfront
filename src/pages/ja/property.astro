---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="物件情報 - BAYFRONT" lang="ja">
  <section class="pt-32 pb-20">
    <div class="container mx-auto px-8">
      <h1 class="text-4xl md:text-6xl text-white font-light tracking-wider mb-16">物件情報</h1>
    </div>
  </section>

  <section class="pb-24 bg-primary">
    <div class="container mx-auto px-8">
      <!-- Featured Properties -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white/10 rounded-lg overflow-hidden">
          <div class="aspect-[4/3] relative">
            <img src="https://placehold.co/800x600/0F3457/CFBC7A?text=Property+1" alt="モダンラグジュアリーマンション" class="w-full h-full object-cover" />
            <div class="absolute top-4 right-4 bg-accent text-white px-3 py-1 text-sm">売却</div>
          </div>
          <div class="p-6 text-white">
            <h3 class="text-xl mb-2">モダンラグジュアリーマンション</h3>
            <div class="bg-white/5 p-4 rounded mb-4">
              <p class="text-sm">〒542-0081</p>
              <p class="text-sm">大阪市中央区南船場2-3-15</p>
              <p class="text-sm">サウスゲート船場 801号室</p>
            </div>
            <div class="flex justify-between text-sm text-gray-300">
              <span>3LDK</span>
              <span>75.5m²</span>
              <span>5,980万円</span>
            </div>
          </div>
        </div>

        <div class="bg-white/10 rounded-lg overflow-hidden">
          <div class="aspect-[4/3] relative">
            <img src="https://placehold.co/800x600/0F3457/CFBC7A?text=Property+2" alt="シティビューマンション" class="w-full h-full object-cover" />
            <div class="absolute top-4 right-4 bg-accent text-white px-3 py-1 text-sm">賃貸</div>
          </div>
          <div class="p-6 text-white">
            <h3 class="text-xl mb-2">シティビューマンション</h3>
            <div class="bg-white/5 p-4 rounded mb-4">
              <p class="text-sm">〒530-0001</p>
              <p class="text-sm">大阪市北区梅田1-1-10</p>
              <p class="text-sm">梅田スカイレジデンス 1205号室</p>
            </div>
            <div class="flex justify-between text-sm text-gray-300">
              <span>1LDK</span>
              <span>45.8m²</span>
              <span>15.8万円/月</span>
            </div>
          </div>
        </div>

        <div class="bg-white/10 rounded-lg overflow-hidden">
          <div class="aspect-[4/3] relative">
            <img src="https://placehold.co/800x600/0F3457/CFBC7A?text=Property+3" alt="伝統的な日本家屋" class="w-full h-full object-cover" />
            <div class="absolute top-4 right-4 bg-accent text-white px-3 py-1 text-sm">売却</div>
          </div>
          <div class="p-6 text-white">
            <h3 class="text-xl mb-2">伝統的な日本家屋</h3>
            <div class="bg-white/5 p-4 rounded mb-4">
              <p class="text-sm">〒543-0023</p>
              <p class="text-sm">大阪市天王寺区味原町3-15</p>
            </div>
            <div class="flex justify-between text-sm text-gray-300">
              <span>4LDK+S</span>
              <span>120.5m²</span>
              <span>8,480万円</span>
            </div>
          </div>
        </div>

        <div class="bg-white/10 rounded-lg overflow-hidden">
          <div class="aspect-[4/3] relative">
            <img src="https://placehold.co/800x600/0F3457/CFBC7A?text=Property+4" alt="ガーデンマンション" class="w-full h-full object-cover" />
            <div class="absolute top-4 right-4 bg-accent text-white px-3 py-1 text-sm">賃貸</div>
          </div>
          <div class="p-6 text-white">
            <h3 class="text-xl mb-2">ガーデンマンション</h3>
            <div class="bg-white/5 p-4 rounded mb-4">
              <p class="text-sm">〒550-0002</p>
              <p class="text-sm">大阪市西区江戸堀1-5-8</p>
              <p class="text-sm">パークサイド江戸堀 502号室</p>
            </div>
            <div class="flex justify-between text-sm text-gray-300">
              <span>2LDK</span>
              <span>58.5m²</span>
              <span>13.5万円/月</span>
            </div>
          </div>
        </div>

        <div class="bg-white/10 rounded-lg overflow-hidden">
          <div class="aspect-[4/3] relative">
            <img src="https://placehold.co/800x600/0F3457/CFBC7A?text=Property+5" alt="リバーサイドマンション" class="w-full h-full object-cover" />
            <div class="absolute top-4 right-4 bg-accent text-white px-3 py-1 text-sm">売却</div>
          </div>
          <div class="p-6 text-white">
            <h3 class="text-xl mb-2">リバーサイドマンション</h3>
            <div class="bg-white/5 p-4 rounded mb-4">
              <p class="text-sm">〒553-0003</p>
              <p class="text-sm">大阪市福島区福島5-8-12</p>
              <p class="text-sm">リバービューパレス 1002号室</p>
            </div>
            <div class="flex justify-between text-sm text-gray-300">
              <span>3LDK</span>
              <span>80.2m²</span>
              <span>6,280万円</span>
            </div>
          </div>
        </div>

        <div class="bg-white/10 rounded-lg overflow-hidden">
          <div class="aspect-[4/3] relative">
            <img src="https://placehold.co/800x600/0F3457/CFBC7A?text=Property+6" alt="コンパクトスタジオ" class="w-full h-full object-cover" />
            <div class="absolute top-4 right-4 bg-accent text-white px-3 py-1 text-sm">賃貸</div>
          </div>
          <div class="p-6 text-white">
            <h3 class="text-xl mb-2">コンパクトスタジオ</h3>
            <div class="bg-white/5 p-4 rounded mb-4">
              <p class="text-sm">〒530-0027</p>
              <p class="text-sm">大阪市北区堂山町1-2-3</p>
              <p class="text-sm">堂山レジデンス 305号室</p>
            </div>
            <div class="flex justify-between text-sm text-gray-300">
              <span>1K</span>
              <span>25.8m²</span>
              <span>7.2万円/月</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Property Search -->
      <div class="mt-16 bg-white/5 rounded-lg p-8">
        <h2 class="text-2xl text-white font-light tracking-wider mb-8">物件検索</h2>
        <form class="grid grid-cols-1 md:grid-cols-4 gap-6">
          <div>
            <label class="block text-sm text-gray-300 mb-2">エリア</label>
            <select class="w-full px-4 py-2 bg-white/10 border border-white/20 text-white rounded focus:outline-none focus:border-accent">
              <option value="">全エリア</option>
              <option value="chuo">中央区</option>
              <option value="kita">北区</option>
              <option value="tennoji">天王寺区</option>
              <option value="nishi">西区</option>
              <option value="fukushima">福島区</option>
            </select>
          </div>
          <div>
            <label class="block text-sm text-gray-300 mb-2">間取り</label>
            <select class="w-full px-4 py-2 bg-white/10 border border-white/20 text-white rounded focus:outline-none focus:border-accent">
              <option value="">指定なし</option>
              <option value="1K">1K</option>
              <option value="1LDK">1LDK</option>
              <option value="2LDK">2LDK</option>
              <option value="3LDK">3LDK</option>
              <option value="4LDK">4LDK以上</option>
            </select>
          </div>
          <div>
            <label class="block text-sm text-gray-300 mb-2">賃貸/売買</label>
            <select class="w-full px-4 py-2 bg-white/10 border border-white/20 text-white rounded focus:outline-none focus:border-accent">
              <option value="">指定なし</option>
              <option value="rent">賃貸</option>
              <option value="sale">売買</option>
            </select>
          </div>
          <div>
            <label class="block text-sm text-gray-300 mb-2">価格帯</label>
            <select class="w-full px-4 py-2 bg-white/10 border border-white/20 text-white rounded focus:outline-none focus:border-accent">
              <option value="">指定なし</option>
              <option value="rent-low">賃貸: ～10万円</option>
              <option value="rent-mid">賃貸: 10万円～15万円</option>
              <option value="rent-high">賃貸: 15万円～</option>
              <option value="sale-low">売買: ～5000万円</option>
              <option value="sale-mid">売買: 5000万円～1億円</option>
              <option value="sale-high">売買: 1億円～</option>
            </select>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>
